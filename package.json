{
  "name": "demo-react-router",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "start:ci": "react-router build && react-router-serve ./build/server/index.js --port 3000",
    "typecheck": "react-router typegen && tsc",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "test:e2e": "concurrently -k -s first \"npm run dev\" \"wait-on http://localhost:5173 && playwright test\"",
    "test:e2e:ui": "concurrently -k -s first \"npm run dev\" \"wait-on http://localhost:5173 && playwright test --ui\"",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.0",
    "@react-router/node": "^7.6.0",
    "@react-router/serve": "^7.6.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "isbot": "^5.1.27",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.0",
    "remix-utils": "^8.7.0"
  },
  "devDependencies": {
    "@react-router/dev": "^7.6.0",
    "@playwright/test": "^1.48.2",
    "concurrently": "^9.1.2",
    "wait-on": "^8.0.1",
    "@tailwindcss/vite": "^4.1.6",
    "@types/node": "^22",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "drizzle-kit": "^0.31.1",
    "tailwindcss": "^4.1.6",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "overrides": {
    "esbuild": "^0.25.2"
  }
}
